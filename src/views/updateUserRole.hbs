<div class="flex h-[calc(100vh-100px)] items-center justify-center">
  <form
    action="/api/users/premium/{{userRoleId}}?_method=PUT"
    method="POST"
    class="w-1/3"
  >
    <fieldset
      class="w-full border border-slate-900 rounded-md flex flex-col items-center p-5 gap-2"
    >
      <legend class="text-2xl">Actualizar role de usuario</legend>
      <section class="w-full text-center">
        <section
          class="w-full border border-slate-900 rounded-md flex flex-col p-5 gap-2"
        >
          <h2
            class="text-2xl text-center mb-10 border-b-2 border-gray-500"
          >"admin", "premium" o "user"</h2>
          <input type="hidden" name="_method" value="PUT" />
          <section>
            <label
              for="role"
              class="flex justify-between items-center uppercase font-bold"
            >Role
              <input
                id="role"
                type="text"
                name="role"
                placeholder="example: 'admin', 'premium' or 'user'"
                value="{{role}}"
                class="w-2/3 px-3 py-2 bg-white border border-slate-300 rounded-md text-sm shadow-sm placeholder-slate-400 focus:outline-none focus:border-sky-700 focus:ring-1 focus:ring-sky-700"
              />
            </label>
          </section>
        </section>
      </section>

      <button
        type="submit"
        class="inline-block text-white text-center w-full h-14 border border-2 rounded-md p-2 pt-3 duration-300 bg-slate-900 hover:bg-slate-600"
      >enviar</button>
    </fieldset>
  </form>

</div>